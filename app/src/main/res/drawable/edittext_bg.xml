<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: padding inside the box -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp"/>
</shape>
