<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatBody"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/shihab"
        />

    <TextView
        android:id="@+id/userfullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Full Name"
        android:textSize="16sp"
        android:fontFamily="@font/alata"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/userProfile"
        app:layout_constraintLeft_toRightOf="@id/userProfile"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="14sp"
        android:fontFamily="@font/alata"
        android:textColor="#878686"
        app:layout_constraintTop_toTopOf="@id/userfullname"
        app:layout_constraintLeft_toRightOf="@id/userProfile"
        app:layout_constraintBottom_toBottomOf="@id/userProfile"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/activeDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/green_dot"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C3C1C1"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfile"
        />

</androidx.constraintlayout.widget.ConstraintLayout>